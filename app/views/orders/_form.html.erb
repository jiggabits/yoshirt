%>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email_address %><br>
    <%= f.text_field :email_address, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :address_1 %><br>
    <%= f.text_field :address_1, class: 'form-control'  %>
  </div>

